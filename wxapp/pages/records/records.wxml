<!--records.wxml-->
<view class='calender-change'>
  <text bindtap='change' data-tag='pre' class='iconfont xgb-arrow-left'></text>
  <text class='calender-change-date'>{{displayYear}} - {{displayMonth}}</text>
  <text bindtap='change' data-tag='next' class='iconfont xgb-arrow-right'></text>
</view>
<view class='calender-panel'>
<view class='calender-header'>
 <view>日</view>
 <view>一</view>
 <view>二</view>
 <view>三</view>
 <view>四</view>
 <view>五</view>
 <view>六</view>
</view>
<view class='calender-panel-cell'>
<block wx:for="{{dateArr}}">
   <view class='calender-row'>
     <block wx:for='{{item}}' wx:for-item="cell">
       <block wx:if='{{cell.monthTag === -1}}'>
          <view wx:if="{{cell.status == 0}}" class="calender-premonth" data-ymd='{{cell.ymd}}' bindtap='handleDateTap'>{{cell.date}}</view>
          <view wx:if="{{cell.status == 1}}" class="calender-premonth start" data-ymd='{{cell.ymd}}' bindtap='handleDateTap'><i class="iconfont xgb-start"></i>{{cell.date}}</view>
          <view wx:if="{{cell.status == 2}}" class="calender-premonth continue" data-ymd='{{cell.ymd}}' bindtap='handleDateTap'>{{cell.date}}</view>
          <view wx:if="{{cell.status == 3}}" class="calender-premonth pause" data-ymd='{{cell.ymd}}' bindtap='handleDateTap'><i class="iconfont xgb-pause"></i>{{cell.date}}</view>
       </block>
       <block wx:if='{{cell.monthTag === 0}}'>
          <block wx:if='{{cell.ymd === displayYMD}}'>
            <view wx:if="{{cell.status == 0}}" class="currentDate selected" data-ymd='{{cell.ymd}}' bindtap='handleDateTap'>{{cell.date}}</view>
            <view wx:if="{{cell.status == 1}}" class="currentDate start selected" data-ymd='{{cell.ymd}}' bindtap='handleDateTap'><i class="iconfont xgb-start"></i>{{cell.date}}</view>
            <view wx:if="{{cell.status == 2}}" class="currentDate continue selected" data-ymd='{{cell.ymd}}' bindtap='handleDateTap'>{{cell.date}}</view>
            <view wx:if="{{cell.status == 3}}" class="currentDate pause selected" data-ymd='{{cell.ymd}}' bindtap='handleDateTap'><i class="iconfont xgb-pause"></i>{{cell.date}}</view>
          </block>
           <block wx:if='{{cell.ymd != displayYMD}}'>
              <view wx:if="{{cell.status == 0}}" data-ymd='{{cell.ymd}}' bindtap='handleDateTap'>{{cell.date}}</view>
              <view wx:if="{{cell.status == 1}}" class='start' data-ymd='{{cell.ymd}}' bindtap='handleDateTap'><i class="iconfont xgb-start"></i>{{cell.date}}</view>
              <view wx:if="{{cell.status == 2}}" class='continue' data-ymd='{{cell.ymd}}' bindtap='handleDateTap'>{{cell.date}}</view>
              <view wx:if="{{cell.status == 3}}" class='pause' data-ymd='{{cell.ymd}}' bindtap='handleDateTap'><i class="iconfont xgb-pause"></i>{{cell.date}}</view>
           </block>
          
       </block>
       <block wx:if='{{cell.monthTag === 1}}'>
          <view wx:if="{{cell.status == 0}}">{{cell.date}}</view>
          <view wx:if="{{cell.status == 1}}" class='start'><i class="iconfont xgb-start"></i>{{cell.date}}</view>
          <view wx:if="{{cell.status == 2}}" class='continue'>{{cell.date}}</view>
          <view wx:if="{{cell.status == 3}}" class='pause'><i class="iconfont xgb-pause"></i>{{cell.date}}</view>
       </block>
       
     </block>
   </view>
</block>
