<!--手动调整-->
<view>
  <view wx:if='{{handSubmit.show === true}}'>
     {{handSubmit.tip}}
    <view class='btn-pannel'>
        <view wx:if='{{submitBtn == false}}' class='xgb-radio' data-type='y' bindtap='handleHandSubmit'>
            <view class='xgb-btn'></view>
            <view>否</view>
        </view>
        <view wx:if='{{submitBtn == true}}' class='xgb-radio' data-type='n' bindtap='handleHandSubmit'>
          <view>是</view>
          <view class='xgb-btn'></view>
        </view>
    </view>
     
  </view>
</view>

</view>
