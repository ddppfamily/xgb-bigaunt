<!--records.wxml-->
<view class='calender-change'>
  <text bindtap='change' data-tag='pre' class='iconfont xgb-arrow-left'></text>
  <text class='calender-change-date'>{{displayYear}} - {{displayMonth}}</text>
  <text bindtap='change' data-tag='next' class='iconfont xgb-arrow-right'></text>
</view>
<view class='calender-panel'>
<view class='calender-header'>
 <view>日</view>
 <view>一</view>
 <view>二</view>
 <view>三</view>
 <view>四</view>
 <view>五</view>
 <view>六</view>
</view>
<view class='calender-panel-cell'>
<block wx:for="{{dateArr}}">
   <view class='calender-row'>
     
     <block wx:for='{{item}}' wx:for-item="cell">
       <!--本月日历中出现的上个月  -->
       <block wx:if='{{cell.monthTag === -1}}'>
          <view></view>
       </block>
      <!--当前指定显示的月  -->
       <block wx:if='{{cell.monthTag === 0}}'>
          <!--当天 年月日  -->
          <block wx:if='{{cell.ymd === currentYMD}}'>
             <!--选中  -->
            <block wx:if='{{cell.ymd === displayYMD}}'>
                <view wx:if="{{cell.status == 0}}" 
                  class="currentDate current selected" 
                  data-ymd='{{cell.ymd}}'
                  data-status='{{cell.status}}' 
                  bindtap='handleDateTap'>{{cell.date}}</view>

            <view wx:if="{{cell.status == 1}}" 
                  class="currentDate current start selected" 
                  data-ymd='{{cell.ymd}}'
                  data-status='{{cell.status}}'
                  bindtap='handleDateTap'>
                  {{cell.date}}</view>

            <view wx:if="{{cell.status == 2}}" 
                  class="currentDate current continue selected" 
                  data-ymd='{{cell.ymd}}'
                  data-status='{{cell.status}}'
                  bindtap='handleDateTap'>{{cell.date}}</view>

            <view wx:if="{{cell.status == 3}}" 
                  class="currentDate current pause selected" 
                  data-ymd='{{cell.ymd}}' 
                  data-status='{{cell.status}}' 
                  bindtap='handleDateTap'>
                  <i class="iconfont xgb-pause"></i>{{cell.date}}</view>
             <view wx:if="{{cell.status == 4}}" 
                  class="currentDate current easy selected" 
                  data-ymd='{{cell.ymd}}' 
                  data-status='{{cell.status}}' 
                  bindtap='handleDateTap'>
                  {{cell.date}}</view>

             <view wx:if="{{cell.status == 5}}" 
                  class="currentDate current ovulation selected" 
                  data-ymd='{{cell.ymd}}' 
                  data-status='{{cell.status}}' 
                  bindtap='handleDateTap'>
                  {{cell.date}}</view> 
            </block>
            <!--未选中  -->
            <block wx:else>
                 <view wx:if="{{cell.status == 0}}" 
                  class="currentDate current" 
                  data-ymd='{{cell.ymd}}'
                  data-status='{{cell.status}}' 
                  bindtap='handleDateTap'>{{cell.date}}</view>

            <view wx:if="{{cell.status == 1}}" 
                  class="currentDate start current" 
                  data-ymd='{{cell.ymd}}'
                  data-status='{{cell.status}}'
                  bindtap='handleDateTap'>
                  {{cell.date}}</view>

            <view wx:if="{{cell.status == 2}}" 
                  class="currentDate continue current" 
                  data-ymd='{{cell.ymd}}'
                  data-status='{{cell.status}}'
                  bindtap='handleDateTap'>{{cell.date}}</view>

            <view wx:if="{{cell.status == 3}}" 
                  class="currentDate pause current" 
                  data-ymd='{{cell.ymd}}' 
                  data-status='{{cell.status}}' 
                  bindtap='handleDateTap'>
                  <i class="iconfont xgb-pause"></i>{{cell.date}}</view>
             <view wx:if="{{cell.status == 4}}" 
                  class="currentDate easy current" 
                  data-ymd='{{cell.ymd}}' 
                  data-status='{{cell.status}}' 
                  bindtap='handleDateTap'>
                  {{cell.date}}</view>

             <view wx:if="{{cell.status == 5}}" 
                  class="currentDate ovulation current" 
                  data-ymd='{{cell.ymd}}' 
                  data-status='{{cell.status}}' 
                  bindtap='handleDateTap'>
                  {{cell.date}}</view> 
            </block>
                
          </block>
           <!--非当天  -->
           <block wx:if='{{cell.ymd != currentYMD}}'>
              <!--选中  -->
              <block wx:if='{{cell.ymd == displayYMD}}'>
                  <view wx:if="{{cell.status == 0}}" 
                    class='selected'
                    data-ymd='{{cell.ymd}}' 
                    data-status='{{cell.status}}' 
                    bindtap='handleDateTap'>{{cell.date}}</view>

              <view wx:if="{{cell.status == 1}}" 
                    class='start selected' 
                    data-ymd='{{cell.ymd}}' 
                    data-status='{{cell.status}}' 
                    bindtap='handleDateTap'>
                    {{cell.date}}</view>

              <view wx:if="{{cell.status == 2}}" 
                    class='continue selected' 
                    data-ymd='{{cell.ymd}}' 
                    data-status='{{cell.status}}' 
                    bindtap='handleDateTap'>{{cell.date}}</view>

              <view wx:if="{{cell.status == 3}}" 
                    class='pause selected' 
                    data-ymd='{{cell.ymd}}' 
                    data-status='{{cell.status}}' 
                    bindtap='handleDateTap'>
                    {{cell.date}}</view>

              <view wx:if="{{cell.status == 4}}" 
                  class="currentDate easy selected" 
                  data-ymd='{{cell.ymd}}' 
                  data-status='{{cell.status}}' 
                  bindtap='handleDateTap'>
                  {{cell.date}}</view>

               <view wx:if="{{cell.status == 5}}" 
                  class="currentDate ovulation selected" 
                  data-ymd='{{cell.ymd}}' 
                  data-status='{{cell.status}}' 
                  bindtap='handleDateTap'>
                  {{cell.date}}</view> 
              </block>
              <block wx:else>
                 <view wx:if="{{cell.status == 0}}" 
                    data-ymd='{{cell.ymd}}' 
                    data-status='{{cell.status}}' 
                    bindtap='handleDateTap'>{{cell.date}}</view>

              <view wx:if="{{cell.status == 1}}" 
                    class='start' 
                    data-ymd='{{cell.ymd}}' 
                    data-status='{{cell.status}}' 
                    bindtap='handleDateTap'>
                    {{cell.date}}</view>

              <view wx:if="{{cell.status == 2}}" 
                    class='continue' 
                    data-ymd='{{cell.ymd}}' 
                    data-status='{{cell.status}}' 
                    bindtap='handleDateTap'>{{cell.date}}</view>

              <view wx:if="{{cell.status == 3}}" 
                    class='pause' 
                    data-ymd='{{cell.ymd}}' 
                    data-status='{{cell.status}}' 
                    bindtap='handleDateTap'>
                    {{cell.date}}</view>

              <view wx:if="{{cell.status == 4}}" 
                  class="currentDate easy" 
                  data-ymd='{{cell.ymd}}' 
                  data-status='{{cell.status}}' 
                  bindtap='handleDateTap'>
                  {{cell.date}}</view>

               <view wx:if="{{cell.status == 5}}" 
                  class="currentDate ovulation" 
                  data-ymd='{{cell.ymd}}' 
                  data-status='{{cell.status}}' 
                  bindtap='handleDateTap'>
                  {{cell.date}}</view> 
              </block>
              
                          
           </block>
          
       </block>
       <!--显示的下个月  -->
       <block wx:if='{{cell.monthTag === 1}}'>
          <view></view>  
       </block>
       
     </block>
   </view>
</block>
