<!--records.wxml-->
<view class='calender-change'>
  <text bindtap='change' data-tag='pre' class='iconfont xgb-arrow-left'></text>
  <text class='calender-change-date'>{{displayYear}} - {{displayMonth}}</text>
  <text bindtap='change' data-tag='next' class='iconfont xgb-arrow-right'></text>
</view>
<view class='calender-panel'>
<view class='calender-header'>
 <view>日</view>
 <view>一</view>
 <view>二</view>
 <view>三</view>
 <view>四</view>
 <view>五</view>
 <view>六</view>
</view>
<view class='calender-panel-cell'>
<block wx:for="{{dateArr}}">
   <view class='calender-row'>
     <block wx:for='{{item}}' wx:for-item="cell">
       <view wx:if="{{cell.monthTag === -1  && cell.status == 0}}" class="calender-premonth">{{cell.date}}</view>
       <view wx:if="{{cell.monthTag === -1 && cell.status == 1}}" class="calender-premonth start">{{cell.date}}</view>
       <view wx:if="{{cell.monthTag === -1 && cell.status == 2}}" class="calender-premonth continue">{{cell.date}}</view>
       <view wx:if="{{cell.monthTag === -1 && cell.status == 3}}" class="calender-premonth pause">{{cell.date}}</view>
       <view wx:if="{{cell.monthTag === 0 && cell.date === currentDate  && cell.status == 0}}" class="currentDate">{{cell.date}}</view>
       <view wx:if="{{cell.monthTag === 0 && cell.date === currentDate && cell.status == 1}}" class="currentDate start">{{cell.date}}</view>
       <view wx:if="{{cell.monthTag === 0 && cell.date === currentDate && cell.status == 2}}" class="currentDate continue">{{cell.date}}</view>
       <view wx:if="{{cell.monthTag === 0 && cell.date === currentDate && cell.status == 3}}" class="currentDate pause">{{cell.date}}</view>
       <view wx:if="{{cell.monthTag === 0 && cell.date !== currentDate  && cell.status == 0}}">{{cell.date}}</view>
       <view wx:if="{{cell.monthTag === 0 && cell.date !== currentDate && cell.status == 1}}" class='start'>{{cell.date}}</view>
       <view wx:if="{{cell.monthTag === 0 && cell.date !== currentDate  && cell.status == 2}}" class='continue'>{{cell.date}}</view>
       <view wx:if="{{cell.monthTag === 0 && cell.date !== currentDate && cell.status == 3}}" class='pause'>{{cell.date}}</view>
       <view wx:if="{{cell.monthTag === 1 && cell.status == 0}}">{{cell.date}}</view>
       <view wx:if="{{cell.monthTag === 1 && cell.status == 1}}" class='start'>{{cell.date}}</view>
       <view wx:if="{{cell.monthTag === 1 && cell.status == 2}} " class='continue'>{{cell.date}}</view>
       <view wx:if="{{cell.monthTag === 1 && cell.status == 3}} " class='pause'>{{cell.date}}</view>
      
     </block>
   </view>
</block>
<!--注释区域-->
