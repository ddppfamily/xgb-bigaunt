/* records.wxss */
.userLogo{
  width:60rpx;
height:60rpx;
float:left;
border-radius:30rpx;

}
.xgb-arrow-left,.xgb-arrow-right{
  padding:5rpx;
  color:#fc6c9d;
  border-radius: 50%;
  background: #fff;
}
.calender-change{
  text-align: center;
  padding:20rpx;
  background:-webkit-gradient(linear, 0 0, 100% 0, from(#fc6c9d), to(#faafa8));
  /* border-bottom:3px solid #e1e1e1; */
  color:#fff;
}
.calender-change-date{
  /* border:1px solid #e1e1e1; */
  padding:10rpx 40rpx;
}
.calender-header,.calender-row,.calender-desp{
  display: flex;
}
.calender-header view,.calender-row>view,.calender-desp>view{
  flex:1;
  text-align: center;
  padding: 3rpx 0;
}
.calender-row>view{
  background: #fff;
  border:2px solid #fff; 
  margin:8rpx 0;
  /* border-radius: 10rpx; */
  /* color: #99CC00; */
  border-radius: 50%;
  padding: 3rpx;
  box-sizing: border-box;
  position: relative;
}
.currentDate{
  color:#fc6c9d;
}
.calender-panel{
  background: #fff;
}
.calender-panel-cell{
  /* background: #e1e1e1; */
  padding:5rpx;
}


.calender-premonth{
  color:#e1e1e1;
}

.calender-row .start,.calender-row .start .xgb-inner-circle{
  /* color: #CC0000; */
  background: #ffd98c;
   /* border:2px solid #FFCCCC;  */
}

 .calender-row .continue,.calender-row .continue .xgb-inner-circle{
  /* color: #CC3333; */
  background: #ffd98c;
  /* border:2px solid #FFCCCC;  */
} 
 .calender-row .pause,.calender-row .pause .xgb-inner-circle{
   /* color: #CC6633; */
   background: #ffd98c;
   /* border:2px solid #FFCCCC;  */
}
.calender-row .selected .easy, .calender-row .selected .easy .xgb-inner-circle{
   /* border:2px solid #efefef;
   background: #efefef; */
   background: #ffabc8;
   color:#fff;
}
.calender-row .selected .ovulation, .calender-row .selected .ovulation .xgb-inner-circle{
   /* border:2px solid #efefef;
   background: #efefef; */
   background: #fc6c9d;
   color:#fff;
}
/* .calender-row .current{
   border:2px solid #CC0000;
} */
.calender-row .easy{
   color: #ffabc8;
}
.calender-row .ovulation{
   color: #fc6c9d;
}
 .calender-row .safe,.calender-row .safe .xgb-inner-circle{
   /* color: #99CC00; */
   background: #6accc0;
} 

.calender-row .submit-start{
  color: #fff;
  background: #CC0000;
}
.calender-row .submit-continue{
  background: #CC3333;
  color: #fff;
}
.calender-row .submit-pause{
   color: #fff;
   background:#CC6633;
}

.btn-pannel{
  display: inline-block;
  float: right;
}
.xgb-radio{
  position: relative;
  display: flex;
  width:200rpx;
  height:40rpx;
  border:1px solid #ff0000;
  border-radius: 20rpx;
  margin:7rpx;
  overflow: hidden;
}
.xgb-radio>view{
  flex:1;
  text-align: center;
  line-height:40rpx;
}
.xgb-btn{
  background: #ff0000;
}
.calender-dayDesc{
  border-top: 1px solid #ffeaed;
  background: #fff;
  /* border-radius: 10px; */
  padding: 15px;
  margin:10px;
  text-align: center;
}
.calender-dayDesc-block{
  color:#fff;
  /* padding: 10rpx; */
  /* background: #6accc0; */
  border-radius: 40px;
}
.calender-dayDesc-outer{
  /* opacity: 0.5; */
  background: rgba(255, 255, 255, 0.5);
  position: relative;
  padding:4px;
  border-radius:30px;
}
.calender-dayDesc-inner{
  /* background: #6accc0; */
  border-radius:25px;
  position: relative;
}
.dayDesc-name{
  font-size: 45rpx;
  /* color:#333; */
  opacity: 1;
}
.dayDesc-desc{
  font-size: 30rpx;
}
.calender-desp{
  box-shadow: 0 5px 5px #ffeaed inset;
  background: #fff;
  padding-top:10px;
  /* margin:5rpx; */
}

.tag{
  width: 20rpx;
  height:20rpx;
  border-radius: 10rpx;
  margin-right:10rpx;
  display: inline-block;
}
.tag-menstrual{
  color:#333;
}
.tag-menstrual .tag{
  background:#ffd98c;
}
.tag-safe{
  color:#333;
}
.tag-safe .tag{
  background: #6accc0;
}
.tag-easy{
  color:#333;
}
.tag-easy .tag{
  background:#ffabc8; 
}
.tag-ovulation{
  color:#333;
}
.tag-ovulation .tag{
  background: #fc6c9d;
}
.go-set{
  display: inline-block;
  float: right;
}
.xgb-status{
  position: absolute;
  width:5px;
  box-sizing: border-box;
  height:5px;
  border-radius: 50%;
  background: #e1e1e1;
  left:50%;
  bottom:-10rpx;
  margin-left:-2px;  
}

.xgb-outer-circle{
  /* padding:3px; */
  background:#fff;
  border-radius:50%;
  display:inline-block;
}
.xgb-inner-circle{
  padding:1rpx;
  border-radius: 50%;
  width:25px;
  height:25px;
  line-height:25px;
  display:inline-block;
}
.selected .xgb-outer-circle{
  /* background:#324567; */
}
.selected .xgb-inner-circle{
  /* background: green; */
  color:#fff;
}
.xgb-inner-mask{
  padding: 3px;
}
.selected .xgb-inner-mask{
  background: rgba(255, 255, 255, 0.5);
  border-radius:50%;
  padding:3px;
}
.tip-safe,.tip-safe .calender-dayDesc-inner{
  background:#6accc0;
}
.tip-easy,.tip-easy .calender-dayDesc-inner{
  background: #ffabc8;
}
.tip-ovulation,.tip-ovulation .calender-dayDesc-inner{
  background: #fc6c9d;
}
.tip-start,.tip-continue,.tip-pause,.tip-start .calender-dayDesc-inner,.tip-continue .calender-dayDesc-inner,.tip-pause .calender-dayDesc-inner{
 background: #ffd98c;
}