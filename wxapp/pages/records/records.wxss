/* records.wxss */
.calender-change{
  text-align: center;
  padding:20rpx;
  background:#fff;
  border-bottom:3px solid #e1e1e1;
}
.calender-change-date{
  border:1px solid #e1e1e1;
  padding:10rpx 20rpx;
}
.calender-header,.calender-row,.calender-desp{
  display: flex;
}
.calender-header view,.calender-row>view,.calender-desp>view{
  flex:1;
  text-align: center;
  padding: 3rpx 0;
}
.calender-row>view{
  background: #fff;
  /* border:2px solid transparent; */
  margin:1rpx;
  border-radius: 10rpx;
}
.currentDate{
  color:crimson;
}
.calender-panel{
  background: #fff;
}
.calender-panel-cell{
  background: #e1e1e1;
  padding:5rpx;
}
.calender-desp{
  background: #fff;
  margin:5rpx;
}

.calender-premonth{
  color:#e1e1e1;
}

.calender-row .start{
  color: #CC0000;
}
.calender-row .continue{
  color: #CC3333;
}
.calender-row .pause{
   color: #CC6633;
}
.calender-row .selected{
   border:2px solid #CC0000;
}

.btn-pannel{
  display: inline-block;
  float: right;
}
.xgb-radio{
  position: relative;
  display: flex;
  width:200rpx;
  height:40rpx;
  border:1px solid #ff0000;
  border-radius: 20rpx;
  margin:7rpx;
  overflow: hidden;
}
.xgb-radio>view{
  flex:1;
  text-align: center;
  line-height:40rpx;
}
.xgb-btn{
  background: #ff0000;
}